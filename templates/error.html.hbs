{{#*inline "pageStyles"}}
.error-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  flex-direction: column;
  gap: 16px;
  text-align: center;
}

.error-code {
  font-size: 4rem;
  font-weight: 800;
  color: var(--text);
  line-height: 1;
  margin: 0;
}

.error-message {
  font-size: 1.5rem;
  color: var(--text-muted);
  margin: 0;
  font-weight: 300;
}

.error-divider {
  width: 1px;
  height: 3rem;
  background: var(--border);
  margin: 0 24px;
}

.error-content {
  display: flex;
  align-items: center;
  gap: 0;
}

@media (max-width: 768px) {
  .error-content {
    flex-direction: column;
    gap: 16px;
  }
  
  .error-divider {
    width: 3rem;
    height: 1px;
    margin: 0;
  }
  
  .error-code {
    font-size: 3rem;
  }
  
  .error-message {
    font-size: 1.25rem;
  }
}
{{/inline}}

{{#> layouts/main}}
<div class="container">
  <div class="error-container">
    <div class="error-content">
      <h1 class="error-code">{{code}}</h1>
      <div class="error-divider"></div>
      <p class="error-message">{{message}}</p>
    </div>
  </div>
</div>
{{/layouts/main}}
